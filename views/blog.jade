extends layout

head
    link(rel='stylesheet', href='/stylesheets/#{file_name}.css')

block content
    div.main_wrap Welcome to #{title}
    p
        input(type="button" value="抓取博文" onclick="catch_blog()")

    -if(user_id)
        input(type="hidden" id="userId" value="#{user_id}")

    -if(user_name)
        input(type="hidden" id="userName" value="#{user_name}")

    -if(blog_list)
        each blog in blog_list
            if(blog)
                each val,key in blog
                    p !{key} : !{val}
                p
                p
                p

    script(type="text/javascript" src="/javascripts/blog.js")
